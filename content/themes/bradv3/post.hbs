{{!< default}}
{{#post}}
<main class="content" role="main">

    <article class="{{post_class}}">

        <header class="post-header">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">Published on the {{date format="Do of MMMM YYYY"}}</time>
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
            {{blog.url}}
        </section>

    </article>

</main>

{{/post}}
