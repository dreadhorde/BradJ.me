{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<article class="{{post_class}} excerpt">
  <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">Published on the {{date format="Do of MMMM YYYY"}}</time>
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">
        {{content words="200"}}
    </section>
    <a class="read-more" href="{{url}}#continue">Continue reading</a>
</article>
<hr>
{{/foreach}}

